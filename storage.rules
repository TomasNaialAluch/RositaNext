rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para productos - solo usuarios autenticados pueden subir
    match /products/{fileName} {
      // Permitir lectura a todos (público)
      allow read: if true;
      
      // Permitir escritura solo a usuarios autenticados
      // Validar que el archivo sea una imagen y tenga tamaño razonable
      allow write: if request.auth != null
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
      
      // Permitir crear archivos
      allow create: if request.auth != null
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 10 * 1024 * 1024;
      
      // Permitir actualizar archivos
      allow update: if request.auth != null
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 10 * 1024 * 1024;
      
      // Permitir eliminar archivos
      allow delete: if request.auth != null;
    }
    
    // Reglas por defecto - denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

